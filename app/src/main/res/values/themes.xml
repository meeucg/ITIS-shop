<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ITISshop" parent="Theme.Material3.DayNight.NoActionBar">
    </style>


    <style name="TextViewTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">32sp</item>
        <item name="textFillColor">@color/primary_text</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextViewPrimary">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="textFillColor">@color/primary_text</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextViewSecondary">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="textFillColor">@color/secondary_text</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CardViewCustom">
        <item name="android:layout_margin">4dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/white</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cornerRadius">16dp</item>
        <item name="cardElevation">16dp</item>
    </style>

    <style name="Theme.ITISshop" parent="Base.Theme.ITISshop" />
</resources>