<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextViewPrimary">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="textFillColor">@color/primary_text</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextViewSecondary">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="textFillColor">@color/secondary_text</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextViewPrimaryInverted">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/primary_text_inverted</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextViewSecondaryInverted">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/secondary_text_inverted</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>